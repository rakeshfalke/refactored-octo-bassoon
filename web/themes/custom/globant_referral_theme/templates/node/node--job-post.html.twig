{%
  set classes = [
    node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}
<article{{ attributes.addClass(classes) }}>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
    {{ title_prefix }}
      {% if not page %}
        <h2{{ title_attributes }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {% endif %}
    {{ title_suffix }}
    </div>
    {% if display_submitted %}
      <div class="col-sm-12">
        {{ author_picture }}
        <div{{ author_attributes.addClass('author') }}>
          {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
          {{ metadata }}
        </div>
      </div>
    {% endif %}
  </div>
  <div class="row">
    <div class="col-sm-4">
      {{ content.field_jp_must_have_skills }}
    </div>
    <div class="col-sm-4">
      {{ content.field_jp_good_to_have_skills }}
    </div>
    <div class="col-sm-4">
      {{ content.field_jp_location }}
    </div>
  </div>
   <div class="row">
    <div class="col-sm-8">
      {{ content.body }}
    </div>
    <div class="col-sm-8">
      {{ content.field_jp_special_notes }}
    </div>
  </div>
</div>
</article>
